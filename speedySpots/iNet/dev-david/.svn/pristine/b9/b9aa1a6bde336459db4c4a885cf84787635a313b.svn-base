{
	margin-top: 20px;
	color: #666;
}

form dt 
{
	float: left;
	padding-right: 10px;
	line-height: 30px;
}

form dd 
{
	line-height: 30px;
}

/* buttons */

/* BUTTONS */

.buttons input{
    display:block;
    float:left;
    margin:0 7px 0 0;
    background-color:#f5f5f5;
    border:1px solid #dedede;
    border-top:1px solid #eee;
    border-left:1px solid #eee;

    font-family:"Lucida Grande", Tahoma, Arial, Verdana, sans-serif;
    font-size:100%;
    line-height:130%;
    text-decoration:none;
    font-weight:bold;
    color:#565656;
    cursor:pointer;
    padding:5px 10px 6px 7px; /* Links */
}
.buttons input{
    width:auto;
    overflow:visible;
    padding:4px 10px 3px 7px; /* IE6 */
}
.buttons input[type]{
    padding:5px 10px 5px 7px; /* Firefox */
    line-height:17px; /* Safari */
}
*:first-child+html input[type]{
    padding:4px 10px 3px 7px; /* IE7 */
}
.buttons input img, .buttons a img{
    margin:0 3px -3px 0 !important;
    padding:0;
    border:none;
    width:16px;
    height:16px;
}

/* STANDARD */

.buttons input:hover {
    background-color:#dff4ff;
    border:1px solid #c2e1ef;
    color:#336699;
}

/* POSITIVE */

.buttons input.positive {
    color:#529214;
    padding-left: 24px;
    background: #f5f5f5 url("../images/tick.png") 5px no-repeat;
}
.buttons input.positive:hover {
    background-color:#E6EFC2;
    border:1px solid #C6D880;
    color:#529214;
}

/* ADD USER */

.buttons input.adduser {
    color:#529214;
    padding-left: 24px;
    background: #f5f5f5 url("../images/user_add.png") 5px no-repeat;
}
.buttons input.adduser:hover {
    background-color:#E6EFC2;
    border:1px solid #C6D880;
    color:#529214;
}

/* NEGATIVE */

.buttons input.negative{
    color:#d12f19;
    padding-left: 24px;
    background: #f5f5f5 url("../images/cross.png") 5px no-repeat;
}
.buttons input.negative:hover{
    background-color:#fbe3e4;
    border:1px solid #fbc2c4;
    color:#d12f19;
}

/* message */

.message
{
	padding: 1em;
	background: #f0f0f0;
	border: 1px solid #ccc;
	border-radius: 5px;
    -webkit-border-radius: 5px;
    -moz-border-radius: 5px;
}

.positive 
{
	background-color: #cfc;
	border-color: #393;
}

.negative 
{
	background-color: #fcc;
	border-color: #f66;
}