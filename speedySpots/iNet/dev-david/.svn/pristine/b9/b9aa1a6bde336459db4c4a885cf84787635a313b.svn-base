* 
{
	margin: 0;
	padding: 0;
}

body
{
	font-family: verdana, arial, Sans-Serif;
	font-size: small;
}

h2 
{
	font-family: helvetica, Arial, Sans-Serif;
	font-size: 28px;
}

p 
{
	line-height: 1.5em;
}

#site 
{
	margin: 0 auto;
	width: 960px;
}

.buttons 
{
	padding: 20px;
	float: left;
	width: 920px;
}

.required 
{
	font-weight: bold;
}

.devnote 
{
	color: red;
}

.note 
{
	background: #ffc;
}

fieldset 
{
	padding: 20px;
	background: #f0f0f0;
	border: 0;
}

